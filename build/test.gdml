<?xml version="1.0" encoding="UTF-8" ?>
<gdml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://service-spi.web.cern.ch/service-spi/app/releases/GDML/schema/gdml.xsd">


  <!-- =============== DEFINITIONS =============== -->
  <define>
    <position name="DetectorinWorldp" unit="cm" x="0" y="0" z="0" />
    <rotation name="DetectorinWorldr" unit="degree" x="0" y="0" z="0.5" />

    <constant name="HALFPI" value="3.14159/2."/>
    <constant name="PI" value="3.14159"/>
    <constant name="TWOPI" value="2.*3.14159"/>
  </define>

  <!-- =============== MATERIALS =============== -->
  <materials>
    <element Z="12" formula="C" name="Carbon" >
      <atom value="12" />
    </element>

    <element Z="9" formula="F" name="Fluorine" >
      <atom value="18.99" />
    </element>

    <element Z="7" formula="N" name="Nitrogen" >
      <atom value="14.01" />
    </element>

    <element Z="8" formula="O" name="Oxygen" >
      <atom value="16" />
    </element>

    <isotope name="H2" Z="1" N="2" >
      <atom type="A" value="2.014" />
    </isotope>

    <element name="Deuterium">
      <fraction ref="H2" n="1.0" />
    </element>

    <!-- ????????????????IS THIS CORRECT?????????????? -->
    <material name="BC537">
      <D value="0.954" />
      <fraction n="0.14" ref="Deuterium" />
      <fraction n="0.86" ref="Carbon" />
    </material>

    <!-- ????????????????IS THIS CORRECT?????????????? -->
    <!-- <material name="BC509">  -->
    <!--   <D value="0.1.61" /> -->
    <!--   <fraction n="0.14" ref="Fluorine" /> -->
    <!--   <fraction n="0.86" ref="Carbon" /> -->
    <!-- </material> -->

    <material formula=" " name="Air" >
      <D value="0.00129" />
      <fraction n="0.7" ref="Nitrogen" />
      <fraction n="0.3" ref="Oxygen" />
    </material>
  </materials>


  <!-- =============== SOLIDS =============== -->
  <solids>
    <box  aunit="radian" lunit="m" name="world" x="1" y="1" z="10" />
    <box  aunit="radian" lunit="m" name="detector" x="0.06" y="0.06" z="0.3" />
    <!-- <tube aunit="radian" lunit="cm" name="detector" z="300" rmax="100" deltaphi="TWOPI" /> -->
  </solids>

  <!-- =============== STRUCTURE =============== -->
  <structure>
    <volume name="Detector" >
      <materialref ref="BC537" />
      <solidref ref="detector" />
      <auxiliary auxtype="SensDet" auxvalue="Scint" />
    </volume>
    <volume name="World" >
      <materialref ref="Air" />
      <solidref ref="world" />
      <physvol>
      	<volumeref ref="Detector" />
      	<positionref ref="DetectorinWorldp" />
      	<rotationref ref="DetectorinWorldr" />
      </physvol>
    </volume>
  </structure>

  <setup name="Default" version="1.0" >
    <world ref="World" />
  </setup>
</gdml>

